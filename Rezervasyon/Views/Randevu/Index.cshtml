@model RandevuModel
<form method="post" asp-controller="Randevu" asp-action="RandevuAl">
    <div class="form-group">
        <label asp-for="CustomerId">Customer ID:</label>
        <select id="CustomerId" asp-for="CustomerId" class="form-control">
            <option>Lutfen musteri Seciniz.</option>
            @foreach(var item in Model.Musterilers)
            {
                <option value=@item.MusteriID>@string.Concat(@item.Ad," ",@item.Soyad)</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="RestaurantId">Restaurant ID:</label>
        <select id="RestaurantId" asp-for="RestaurantId" class="form-control">
            <option>Lutfen Restorant Seciniz.</option>
            @foreach (var item in Model.Restorantlars)
            {
                <option value=@item.RestoranID>@string.Concat(@item.Ad)</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Date">Date:</label>
        <input id="dateInput" asp-for="Date" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label asp-for="Time">Time:</label>
        <select id="timeInput" asp-for="Time" class="form-control">
            <option>Lutfen Tarih Seciniz.</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfPeople">Number of People:</label>
        <input asp-for="NumberOfPeople" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add Reservation</button>
</form>
